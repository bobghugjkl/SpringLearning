<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxxx.ssm.dao.UserDao">
      <select id="queryUserByUserId" parameterType="int" resultType="com.xxxx.ssm.vo.User">
           select id,user_name as userName,user_pwd as userPwd
           from t_user
           where id=#{userId}
      </select>
</mapper>